# LMArena API Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Multi-Region Cookies (REQUIRED)
# Get these from your LMArena account sessions
COOKIE_SG=your_singapore_cookie_here
COOKIE_US=your_us_west_cookie_here
COOKIE_EU=your_eu_london_cookie_here
COOKIE_JP=your_asia_tokyo_cookie_here

# Backup Cookies (Optional but recommended for high availability)
COOKIE_SG_BACKUP=your_singapore_backup_cookie
COOKIE_US_BACKUP=your_us_backup_cookie
COOKIE_EU_BACKUP=your_eu_backup_cookie
COOKIE_JP_BACKUP=your_jp_backup_cookie

# Rate Limiting Configuration
RL_SAFETY=0.85
RL_DEFAULT_WINDOW=300
RL_DEFAULT_LIMIT=3000

# Request Configuration
REQUEST_TIMEOUT=600000
MAX_PAYLOAD_BYTES=90000

# Proxy Configuration
ENABLE_PROXY=true
PROXY_ROTATION=true

# Security
API_KEY=your_api_key_here
ENABLE_API_KEY_AUTH=false

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
